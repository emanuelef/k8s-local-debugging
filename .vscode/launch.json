{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Go app",
      "type": "go",
      "request": "launch",
      "program": "go-app/main.go",
      "mode": "debug"
    },
    {
      "name": "Launch Python app",
      "type": "debugpy",
      "request": "launch",
      "program": "python-app/app.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Launch Python Second app",
      "type": "debugpy",
      "request": "launch",
      "program": "python-app/second-app.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Launch Rust app",
      "type": "lldb",
      "request": "launch",
      "program": "rust-app/target/debug/rust-app",
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
